# Some sections generated by Claude 3.7 Sonnet (version 20250219)
#
# This Dockerfile creates an image with clang-format that preserves file ownership
# when using the -i option with mounted volumes. This allows users to run the
# container with their source code mounted and have clang-format modify files
# without changing the ownership attributes.

FROM registry.access.redhat.com/ubi8/ubi-minimal:latest

# Create a non-root user and group
RUN microdnf install -y shadow-utils \
    && groupadd -g 1000 clanguser \
    && useradd -u 1000 -g clanguser -m -s /bin/bash clanguser \
    && microdnf remove -y shadow-utils \
    && microdnf clean all

# Install required packages
RUN set -eux; \
    microdnf install -y \
       wget tar xz ncurses-compat-libs sudo \
    && microdnf update -y \
    && microdnf clean all

# Create directories with appropriate permissions
RUN mkdir -p /opt/clang-tools /src \
    && chown -R clanguser:clanguser /opt/clang-tools /src

# Install clang-format in a location accessible to non-root users
RUN cd /tmp \
    && wget https://github.com/llvm/llvm-project/releases/download/llvmorg-18.1.8/clang+llvm-18.1.8-x86_64-linux-gnu-ubuntu-18.04.tar.xz \
    && tar -xvf clang+llvm-18.1.8-x86_64-linux-gnu-ubuntu-18.04.tar.xz --no-same-owner \
    && cp clang+llvm-18.1.8-x86_64-linux-gnu-ubuntu-18.04/bin/clang-format /opt/clang-tools/ \
    && rm -rf clang+llvm-18.1.8-x86_64-linux-gnu-ubuntu-18.04* \
    && microdnf remove -y wget tar xz \
    && microdnf clean all

# Configure sudo to allow clanguser to run commands without password
# This is needed to preserve file ownership when using clang-format with -i option
RUN echo "clanguser ALL=(ALL) NOPASSWD: ALL" > /etc/sudoers.d/clanguser && \
    chmod 0440 /etc/sudoers.d/clanguser

# Copy entrypoint script
COPY entrypoint.sh /opt/clang-tools/
RUN chmod +x /opt/clang-tools/entrypoint.sh

# Set up environment
ENV PATH=/opt/clang-tools:$PATH

# Switch to non-root user
USER clanguser
WORKDIR /src

# Use entrypoint script to handle preserving file ownership
ENTRYPOINT ["/opt/clang-tools/entrypoint.sh"]
CMD ["--help"]
